<div class="container">
  <h1 class="text-center mt-4"><%= @category.name %></h1>
  <% if logged_in? && current_user.admin? %>
    <div class="text-center mt-4">
      <%= link_to "Edit category name", edit_category_path(@category), class: "btn btn-secondary" %>
    </div>
    <% end %>
  <h3 class="text-center mt-4">Articles</h3>
  <div class="row justify-content-md-center">
    <div class="apple_pagination col-6">
      <%= will_paginate @articles, container: false %>
    </div>
  </div>
  <%= render 'articles/article' %>
    <div class="row justify-content-md-center">
    <div class="apple_pagination col-6 mt-4">
      <%= will_paginate @articles, container: false %>
    </div>
  </div>
  <div class="text-center mt-4 mb-4">
    <%= link_to '[ Return to articles listing ]', articles_path, class: "link-light" %>
  </div>
</div>
