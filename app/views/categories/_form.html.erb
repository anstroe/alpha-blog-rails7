<%= render "shared/errors", obj: @category %>
<%= form_with(model: @category, class: "shadow p-3 mb-4 bg-light rounded", local: true) do |f| %>
  <div class="form-group row">
    <%= f.label :name, "Category name", class: "col-2 col-form-label" %>
    <div class="col-10">
      <%= f.text_field :name, class: "form-control shadow-sm", placeholder: "Name..." %>
    </div>
  </div>
  <div class="form-group row mt-4 justify-content-center">
    <%= f.submit class: "btn btn-outline-secondary btn-lg col-2" %>
  </div>
<% end %>
