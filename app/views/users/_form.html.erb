<div class="row justify-content-center">
  <div class="col-10">
    <%= render "shared/errors", obj: @user %>
    <%= form_with(model: @user, class: "shadow p-3 mb-4 bg-light rounded", local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :username, class: "col-2 col-form-label" %>
        <div class="col-10">
          <%= f.text_field :username, class: "form-control shadow-sm", placeholder: "Username..." %>
        </div>
      </div>
      <div class="form-group row mt-4">
        <%= f.label :email, class: "col-2" %>
        <div class="col-10">
          <%= f.email_field :email, class: "form-control shadow-sm", placeholder: "Email..." %>
        </div>
      </div>
          <div class="form-group row mt-4">
        <%= f.label :password, class: "col-2" %>
        <div class="col-10">
          <%= f.password_field :password, class: "form-control shadow-sm", placeholder: "Password..." %>
        </div>
      </div>
      <div class="form-group row mt-4 justify-content-center">
        <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-secondary btn-lg col-2") %>
      </div>
    <% end %>
  </div>
  <div class="text-center mb-4">
    <%= link_to '[ Cancel & return to articles listing ]', articles_path, class: "link-light" %>
  </div>
</div>
